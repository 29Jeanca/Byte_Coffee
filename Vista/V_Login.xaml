<Window x:Class="Byte_Coffee.Vista.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="1080"
        Width="1920"
        MaxHeight="1080"
        MaxWidth="1920"
        MinHeight="768"
        MinWidth="1366"
        Background="#322E2E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0"
               Source="https://i.imgur.com/m1ZbynN.jpg"
               Stretch="UniformToFill" />

        <Border  CornerRadius='20'
                 Background='#b94838'
                 HorizontalAlignment='Center'
                 VerticalAlignment='Top'
                 Width='500'
                 Height='400'
                 Grid.Column='1'
                 Margin='0,276,0,0'>
            <StackPanel>
                <TextBlock Text="ByteCoffee"
                           Foreground='#fff'
                           FontSize='40'
                           HorizontalAlignment='Center'
                           Margin='0,20,0,0' />

                <Grid Margin="30,40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Line Stroke="#FFF"
                          StrokeThickness="5"
                          VerticalAlignment="Top"
                          X1="0"
                          X2="609"
                          Margin="-32,-32,-32,0" />

                    <TextBlock Grid.Row="0"
                               Text="Correo electrónico"
                               Foreground="#FFF"
                               FontSize="28"
                               VerticalAlignment="Center" />

                    <TextBox x:Name="txtCorreo"
                             Grid.Row="1"
                             Height="30"
                             VerticalAlignment="Center"
                             FontSize="20"
                             Margin="0,5"
                             BorderThickness="1"
                             BorderBrush="#FFF" />

                    <TextBlock Grid.Row="2"
                               Text="Contraseña"
                               Foreground="#FFF"
                               FontSize="28"
                               VerticalAlignment="Center"
                               Height="40" />
                    <PasswordBox x:Name="txtClave"
                                 Grid.Row='3'
                                 Height='30'
                                 VerticalAlignment='Center'
                                 FontSize='20'
                                 Margin='0,5'
                                 BorderThickness='1'
                                 BorderBrush='#fff' />
                    <Button x:Name="btnOlvidarClave"
                            Grid.Row='5'
                            Content='¿Olvidaste tu contraseña?'
                            Foreground='#fff'
                            BorderBrush='Transparent'
                            Background='Transparent'
                            FontSize='16'
                            VerticalAlignment='Top'
                            HorizontalAlignment='Center'
                            Margin='0,53,0,0' />

                    <Button  x:Name="btnIniciarSesion"
                             Click="btnIniciarSesion_Click"
                             Grid.Row='5'
                             VerticalAlignment='Center'
                             HorizontalAlignment='Center'
                             Width='144'
                             Height='40'
                             Content='Iniciar Sesión'
                             Background='#ffff'
                             Foreground='#000'
                             BorderThickness='1' />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>

</Window>
