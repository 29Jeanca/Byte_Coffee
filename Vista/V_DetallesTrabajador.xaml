<Window x:Class="Byte_Coffee.Vista.V_DetallesTrabajador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Byte_Coffee.Vista"
        mc:Ignorable="d"
        Title="Detalles"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Etiquetas -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Content="Nombre"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Margin="5" />
            <Label Content="Correo"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Grid.Column="1"
                   Margin="5" />
            <Label Content="Puesto"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Grid.Column="2"
                   Margin="5" />
            <Label Content="Horario"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Grid.Column="3"
                   Margin="5" />
            <Label Content="Fecha de Contratación"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Grid.Column="4"
                   Margin="5" />
            <Label Content="Salario"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   Grid.Column="5"
                   Margin="5" />
        </Grid>

        <ListBox x:Name="listaTrabajadores"
                 Grid.Row="1"
                 Background="White"
                 Foreground="Black"
                 Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Nombre}"
                                   Grid.Column="0"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Apellido1}"
                                   Grid.Column="1"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Apellido2}"
                                   Grid.Column="2"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Correo}"
                                   Grid.Column="3"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Puesto}"
                                   Grid.Column="4"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Horario}"
                                   Grid.Column="5"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Fecha_Contratacion}"
                                   Grid.Column="6"
                                   Margin="10"
                                   Foreground="Black" />
                        <TextBlock Text="{Binding Salario}"
                                   Grid.Column="7"
                                   Margin="10"
                                   Foreground="Black" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="Foreground"
                    Value="Black" />
            <Setter Property="BorderBrush"
                    Value="LightBlue" />
            <Setter Property="BorderThickness"
                    Value="2" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background"
                                Value="LightBlue" />
                        <Setter Property="Foreground"
                                Value="Black" />
                        <Setter Property="Padding"
                                Value="10" />
                        <Setter Property="Margin"
                                Value="5" />
                        <Setter Property="FontSize"
                                Value="14" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
